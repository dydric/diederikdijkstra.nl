---
layout: layouts/base.njk
title: Categories
pagination:
  data: collections
  size: 1
  alias: category
permalink: /category/{{ category }}/
---

<main class="p-8 max-w-xl text-lg">
  <h2 class="font-extrabold text-4xl mb-8"><a href="/">{{ site.author }} <span class="hidden">v{{ site.version}}</span></a></h2>

  <section>
    <h1 class="font-bold text-5xl mb-8">#{{ category | capitalize }}</h1>

    {% for post in collections[category] | reverse %}
    <article class="border-b-2 border-theme-color-3 mb-2">
      <h2 class="font-bold text-3xl"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <time datetime="{{ post.date }}" class="mb-2 block text-base opacity-75">
          {{ post.date | readableDate }}
      </time>
    </article>
    {% endfor %}

  </section>
</main>
