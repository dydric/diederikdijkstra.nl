{% macro default(
  title = "",
  description = "",
  content = ""
) %}

<div class="py-8 lg:py-12">
  {% if title -%}
    <h2 class="text-2xl md:text-3xl leading-none font-bold tracking-tight text-gray-900 dark:text-gray-50 mb-2">
      {{ title }}
    </h2>
  {%- endif %}
  {% if description -%}
  <div class="prose dark:prose-dark max-w-none mb-8">
    {{ description | safe }}
  </div>
  {%- endif %}
  {% if content -%}
    {{ content | safe }}
  {%- endif %}
</div>

{% endmacro %}

{% macro divider(
  style = "1"
) %}
  {% if style == 1 %}
    <div class="my-10 sm:my-12 lg:my-16 h-1 bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 dark:from-purple-900 dark:via-pink-900 dark:to-red-900 rounded"></div>
  {% elif style == 2 %}
    <div class="my-10 sm:my-12 lg:my-16 h-1 bg-gradient-to-r from-purple-400 via-blue-400 to-green-400 dark:from-pink-900 dark:via-red-900 dark:to-purple-900 rounded"></div>
  {% else %}
    <div class="my-10 sm:my-12 lg:my-16 h-1 bg-gradient-to-r from-blue-400 via-green-400 to-purple-400 dark:from-red-900 dark:via-purple-900 dark:to-pink-900 rounded"></div>
  {% endif %}
{% endmacro %}


{% macro fullbleed(
  id = "",
  bgClasses = "bg-gradient-to-br from-blue-200 to-purple-200 dark:from-purple-800 dark:to-blue-800 opacity-50",
  contentClasses = "mx-auto max-w-xl md:max-w-2xl lg:max-w-3xl xl:max-w-4xl",
  content = ""
  )
%}
<div {% if id %}id="{{ id }}" {% endif %}class="relative left-1/2 transform -translate-x-1/2 w-screen max-w-screen-2xl px-4 mb-4">
  <div class="mx-auto p-4 py-8 lg:py-12 relative">
    <div class="absolute z-0 left-0 right-0 bottom-0 top-0 rounded-xl {{ bgClasses }}"></div>
    <div class="relative z-10 {{ contentClasses }}">
      {{ content | safe }}
    </div>
  </div>
</div>
{% endmacro %}
