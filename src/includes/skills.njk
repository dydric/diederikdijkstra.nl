{% set skills = [
  [ "💻",
    "Responsive &amp; Mobile websites",
    "Atomic Design / BEM"
  ],
  [ "💡",
    "TailwindCSS / Nunjucks / Alpine.js"
  ],
  [ "❤️",
    "JAMstack",
    "Eleventy (11ty) / Netlify"
  ],
  [ "⚛️",
    "Design Systems",
    "Styleguides / Pattern libraries "
  ],
  [ "🛠",
    "Npm / Gulp / Webpack / PostCSS / Sass"
  ],
  [ "⚡️",
    "Performance",
    'Lighthouse / <a href="https://developers.google.com/speed/pagespeed/insights/?hl=nl&url=https%3A%2F%2Fdiederikdijkstra.nl%2F&tab=desktop" target="_blank" rel="noopener noreferrer">Page speed</a>'],
  [ "👀",
    "Accessibility",
    'WCAG / <a href="https://www.digitoegankelijk.nl/" target="_blank" rel="noopener noreferrer">DigiToegankelijk</a>'],
  [ "🎨",
    "Design",
    "Figma / Sketch"
  ],
  [ "🤓",
    "GIT / Command line",
    "VSCode / Hyper / Tower"
  ]
] %}

<ul class="grid gap-2 grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 mt-6">
  {% for emoji, title, content in skills %}
  <li class="col-span-1 flex items-stretch sm:items-start rounded-md overflow-hidden">
    <div class="bg-white dark:bg-purple-200 flex-shrink-0 flex items-center justify-center w-10 sm:w-12 text-center text-2xl leading-none py-2 sm:py-3 rounded-lg"><span class="relative" style="left: -1px">{{ emoji }}</span></div>
    <div class="flex-1 px-3 py-1 flex flex-col items-start justify-center flex-wrap">
      {% if title %}<h3 class="w-full text-lg font-bold leading-tight tracking-tight text-gray-900 dark:text-gray-50">{{ title | safe }}</h3>{% endif %}
      {% if content %}
      <div class="prose prose-sm max-w-none dark:prose-dark opacity-90">
        <span class="-mt-4">{{ content | safe }}</span>
      </div>
      {% endif %}
    </div>
  </li>
  {% endfor %}
</ul>
