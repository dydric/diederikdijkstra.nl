  <section>
    <h2>Topnummers van deze maand</h2>
    <p class="mb-4 lg:-mt-2">Daar zitten natuurlijk ook wat favorieten van de kinderen tussen ðŸ˜‰.</p>

    {%- import "music.njk" as music with context -%}
      <div class="grid divide-y-2 divide-gray-600 rounded bg-gray-800 dark:bg-black p-4" >

    {% for track in spotify.toptracks %}
      {{ music.track(
          index = loop.index,
          albumCoverUrl = track.album.images[1].url,
          trackName = track.name,
          trackArtists = track.artists,
          spotifyLink = track.external_urls.spotify,
          audioUrl = track.preview_url
      ) }}
    {% endfor %}
    </div>
  </section>

  <section>
    <h2>Topartiesten</h2>
    <p class="mb-4 lg:-mt-2">Overzicht van de laatste 6 maanden.<br>Ook hier een paar opvallende artiesten die ik niet direct kan verklaren ðŸ˜˜.</p>

    <div class="relative left-1/2 transform -translate-x-1/2 w-screen max-w-screen-2xl px-4">
    <ul class="grid grid-cols-5 sm:grid-cols-6 md:grid-cols-7 lg:grid-cols-8 xl:grid-cols-9 gap-2 grid-flow-row-dense relative">
    {% for artist in spotify.topartists %}

      {% set highlighted = ['The Black Keys', 'The War On Drugs', 'Ben Howard'] %}
      {% set classes = '' %}
      {% if artist.name in highlighted %}
        {% set classes = 'col-span-2 row-span-2 spotify-artist--highlighted' %}
      {% endif %}

      {% set artistUrl = artist.uri | replace("spotify:", "https://open.spotify.com/") | replace("artist:", "artist/") %}


      <li class="mb-0 {{ classes }}">
        <a href="{{ artistUrl }}" target="_blank" rel="noopener noreferrer" class="spotify-artist-link group rounded overflow-hidden shadow-md hover:shadow-xl block h-full hover:opacity-100 transition-shadow duration-100">
          <div class="text-white bg-black bg-opacity-75 text-2xl md:text-3xl lg:text-4xl xl:text-5xl leading-none font-extrabold p-2 m-2 hidden sm:block max-w-full absolute left-0 bottom-0 rounded opacity-0 group-hover:opacity-100 z-20 pointer-events-none">{{ artist.name }}</div>
          <div class="color-filter h-full w-full">
            <img src="{{ artist.images[1].url }}" width="{{ artist.images[1].width }}" height="{{ artist.images[1].height }}" class="object-cover h-full w-full" loading="lazy" alt="artiest: {{ artist.name }}">
          </div>
        </a>
      </li>
    {% endfor %}
    </ul>
    </div>
  </section>

  {% set newGenres = [] %}
    {% for artist in spotify.topartists %}
      {% for genre in artist.genres %}
        {% if genre not in newGenres %}
          {% set genres = (newGenres.push(genre), newGenres) %}
        {% endif %}
      {% endfor %}
    {% endfor %}

  <section>
    <h2>Genres</h2>
    <ul class="flex flex-wrap justify-start -ml-1">
      {% for genre in newGenres %}
        <li class="mr-1 mb-1 flex-auto text-center max-w-xs">
        <a href="https://open.spotify.com/search/genre%3A{{ genre | urlencode }}/tracks" class="bg-black text-white p-3 rounded-lg leading-none block no-underline text-lg hover:bg-blue-600 hover:opacity-100" target="_blank" rel="noopener noreferrer">{{ genre }}</a></li>
      {% endfor %}
    </ul>
  </section>


  <section>
    <h2>En Publique</h2>
    <p class="mb-4 lg:-mt-2">Openbare playlists.</p>
    <ul class="flex flex-wrap -mx-1">
    {% for playlist in spotify.playlists.items %}
    {% if not 'Fijne deuntjes No' in playlist.name %}

      <li class="w-1/2 md:w-full mb-0 relative px-1 pb-2">
        <div class="bg-black p-2 sm:p-4 rounded overflow-hidden flex flex-col md:flex-row h-full md:h-auto ">
          <div class="flex-initial w-full md:w-32 xl:w-40 mb-2 sm:mb-4 md:mb-0 md:mr-4 flex-shrink-0">
            <a href="{{ playlist.external_urls.spotify }}" target="_blank" rel="noopener noreferrer"><img src="{{ playlist.images[0].url }}" width="{{ playlist.images[0].width }}" height="{{ playlist.images[0].height }}" class="w-full" loading="lazy"></a>
          </div>
          <div class="text-white flex-auto flex flex-col ">
            <div class="flex-auto">
              <a href="{{ playlist.external_urls.spotify }}" target="_blank" rel="noopener noreferrer" class="text-white text-base sm:text-xl sm:text-2xl lg:text-3xl xl:text-4xl leading-tight font-extrabold block no-underline hover:underline">{{ playlist.name }}</a>
              <span class="hidden md:block text-lg font-medium leading-normal mt-2">{{ playlist.description | safe }}</span>
            </div>
            <div class="mt-2">
              <a href="{{ playlist.external_urls.spotify }}" target="_blank" rel="noopener noreferrer" class="button bg-blue-600 block sm:inline-flex ml-auto w-auto p-2 sm:px-4 hover:underline truncate leading-none min-h-full text-center">Open playlist in Spotify</a>
            </div>

          </div>

        </div>

      </li>




      {% endif %}
    {% endfor %}
    </ul>
  </section>


