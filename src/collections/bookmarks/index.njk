---
layout: layouts/base.njk
title: Bookmarks
intro:
---

<section class="section">
  <div class="content">

    <h1 class="font-bold text-5xl">{{ title }}</h1>



    <div class="flex flex-wrap max-w-6xl py-6 -mx-1">

      <div class="flex-auto w-full md:w-1/2 md:pr-4">
        {% for item in pinboard %}
          {% if item.tags == "Instapaper" %}
          <div class="card mb-4">
            <div>
              <span class="text-base font-bold opacity-75">{{ item.time | readableDate }}</span>
              <h3 class="text-lg md:text-2xl leading-tight mb-1"><a href="{{ item.href }}" target="_blank" rel="noopener noreferrer">{{ item.description }}</a></h3>
              {# {% if item.extended %}<p class="mb-2 text-base">{{ item.extended }}</p>{% endif %} #}
            </div>
          </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="flex-auto w-full md:w-1/2 md:pl-4">
        {% for item in pinboard %}
          {% if item.tags != "Instapaper" %}
          <div class="w-full py-3 border-b-2 border-primary">
            {# {{ item.time | readableDate }} #}
            <h3 class="text-lg md:text-xl leading-tight mb-1"><a class=" text-body" href="{{ item.href }}" target="_blank" rel="noopener noreferrer">{{ item.description }}</a></h3>
            {% if item.extended %}<p class="mb-2 text-base">{{ item.extended }}</p>{% endif %}
            {% if item.tags %}<span class="opacity-50 text-sm">{{ item.tags }}</span>{% endif %}
          </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="flex-auto flex flex-wrap w-full -mx-2 pt-4 mb-12 hidden">
        {% for item in tweets %}
          <div class="w-1/2 md:w-1/3 xl:w-1/4 p-2">
            <div class="card mb-4">
              <div>
                <span class="text-sm font-bold opacity-75">{{ item.created | readableDate }}</span>
                <h3 class="text-base leading-tight mb-1"><a class="text-title" href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.text }}</a></h3>
                {# {% if item.extended %}<p class="mb-2 text-base">{{ item.extended }}</p>{% endif %} #}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

    </div>

  </div>
</section>
