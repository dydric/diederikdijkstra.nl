---
layout: layouts/base.njk
title: Bookmarks
intro:
---

<section class="section">
  <div class="content">

    <h1 class="font-bold text-5xl">{{ title }}</h1>

    {% set year = '' %}
    {% set month = '' %}

        {% for item in pinboard %}

          {% set date = item.time | readableDate %}
          {% set currentyear = date.slice(6) %}
          {% set currentmonth = date.slice(3) %}

          {% if month != currentmonth %}
            {% if loop.index != 1 %}</div></div>{% endif %}
              <div class="flex flex-wrap md:flex-no-wrap border-b-2 border-primary mb-4 max-w-6xl">
                <div class="flex-initial flex-shrink-0 self-start w-full md:w-1/5 md:sticky top-0 py-3 md:pt-6 md:pb-12">
                  <h4 class="truncate font-bold text-xl lg:text-2xl text-body">{{ currentmonth }}</h4>
                </div>
                {% set month = currentmonth %}
                <div class="flex-auto pb-3 md:py-6 md:-mt-2">
          {% endif %}

          {% if item.tags == "Instapaper" %}
            <div class="py-3 block">
              <h3 class="text-lg md:text-2xl leading-tight mb-1"><a href="{{ item.href }}" target="_blank" rel="noopener noreferrer" class="no-underline hover:underline">{{ item.description }}</a></h3>
              <a href="{{ item.href }}" target="_blank" rel="noopener noreferrer" class="no-underline hover:underline">
              <span class="mb-2 text-sm opacity-75 text-meta">{{ item.href }}</span>
              </a>
            </div>
          {% else %}
            <div class="w-full py-3">
              <h3 class="text-lg md:text-xl leading-tight mb-1"><a class=" text-body" href="{{ item.href }}" target="_blank" rel="noopener noreferrer">{{ item.description }}</a></h3>
              {% if item.extended %}<p class="mb-2 text-base">{{ item.extended }}</p>{% endif %}
              {% if item.tags %}<span class="opacity-50 text-sm">{{ item.tags }}</span>{% endif %}
            </div>
          {% endif %}
        {% endfor %}

  </div>
</section>
