---
layout: layouts/base.njk
title: Favorites
intro:
---

<section class="section">
  <div class="content">

    <h1>{{ title }}</h1>

    <div class="flex flex-wrap max-w-6xl py-6 -mx-1">
    {% for item in tweets %}
      <div class="w-1/2 sm:w-1/3 md:w-1/4 lg:w-1/5 flex items-end px-1">
        <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.text }}</a>
      </div>
    {% endfor %}
    </div>

    {% if pagination %}
    <p class="mb-8">
      {% if pagination.previousPageLink %}
        <a href="{{ pagination.previousPageLink}} ">Previous</a>
      {% else %}
        <span class="opacity-50">Previous</span>
      {% endif %}
      /
      {% if pagination.nextPageLink %}
        <a href="{{ pagination.nextPageLink }}">Next</a>
      {% else %}
        <span class="opacity-50">Next</span>
      {% endif %}
    </p>
    {% endif %}

  </div>
</section>
