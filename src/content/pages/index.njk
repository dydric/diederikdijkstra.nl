{% set postTitle = "Laatste berichten:" %}

{%- if collections.post.length > 5 -%}
  {%- set postCount = 5 -%}
  {% set postTitle = "Laatste " + postCount + " berichten:" %}
{%- endif -%}

{%- import "macros/cards.njk" as card -%}

<h2 class="font-bold leading-none text-xl lg:text-2xl mt-8 mb-5 text-cool-gray-700 text-opacity-75">
  {{ postTitle }}
</h2>

<div class="border-b-2 border-gray-300 border-opacity-25 mb-4">
{% for post in collections.post | reverse %}
  {%- if collections.post.length > 5 -%}
    {% if loop.index < (postCount + 1) %}
      {{ card.post(
        postTitle = post.data.title,
        postUrl = post.url,
        postDate = post.date,
        postTags = post.data.tags
      ) }}
    {% endif %}
  {% else %}
    {{ card.post(
      postTitle = post.data.title,
      postUrl = post.url,
      postDate = post.date,
      postTags = post.data.tags
    ) }}
  {% endif %}
{%- endfor %}
</div>

{%- if collections.post.length > 5 -%}
  <a href="/blog" class="inline-flex items-center p-3 border border-transparent text-base leading-4 font-medium rounded-md text-champagne-900 hover:text-champagne-50 bg-champagne-100 hover:bg-champagne-600 focus:outline-none focus:border-champagne-800 focus:shadow-outline-champagne active:bg-champagne-800 transition ease-in-out duration-150">Archief</a>
{% endif %}


