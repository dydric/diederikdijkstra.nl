        <div class="">
          {{ card.tags(
              tags = post.data.tags,
              classes = "font-bold text-xs uppercase inline-block mr-1 text-lavender-700 hover:text-lavender-50 transition-colors duration-150 bg-flamingo-50 hover:bg-lavender-800 rounded px-2 py-1 pointer-events-auto"
            )
          }}
        </div>
      </div>
    </div>
  {% endif %}
{%- endfor -%}
</div>

