{% if description %}<p class="-mt-4 mb-8 text-gray-700 text-lg font-medium">{{ description }}</p>{% endif %}

<div class="border-b-2 border-gray-300 border-opacity-25 mb-8">
  {%- import "macros/cards.njk" as card -%}
  {% for post in collections.post | reverse %}
    {{ card.list(
      postTitle = post.data.title,
      postUrl = post.url,
      postDate = post.date,
      postTags = post.data.tags,
      customTag = post.data.customTag,
      excerpt = post.data.excerpt,
      postContent = post.templateContent
    ) }}
  {%- endfor %}
</div>

  <div class="">
  {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}" class="inline-flex items-center p-3 border border-transparent text-base leading-4 font-medium rounded-md text-champagne-900 hover:text-champagne-50 bg-champagne-100 hover:bg-champagne-600 focus:outline-none focus:border-champagne-800 focus:shadow-outline-champagne active:bg-champagne-800 transition ease-in-out duration-150">Vorige</a>{% endif %}
  {% if pagination.href.next %}<a href="{{ pagination.href.next }}" class="inline-flex items-center p-3 border border-transparent text-base leading-4 font-medium rounded-md text-champagne-900 hover:text-champagne-50 bg-champagne-100 hover:bg-champagne-600 focus:outline-none focus:border-champagne-800 focus:shadow-outline-champagne active:bg-champagne-800 transition ease-in-out duration-150">Volgende</a>{% endif %}
  </div>
