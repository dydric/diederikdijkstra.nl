---
layout: layouts/default
---
{% set isPromo = false %}
{%- for postTag in tags -%}
  {%- if 'promo' in postTag -%}
    {% set isPromo = true %}
  {%- endif -%}
{%- endfor -%}


<div class="-mt-8 mb-8">
  {% if not isPromo %}<time class="font-bold text-xs text-gray-600 text-opacity-50 mr-2" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>{% endif %}

  {%- import "macros/cards.njk" as card -%}
  {{ card.tags(
    tags = tags
  ) }}
</div>

<div class="markdown">
  {% if featured_image %}
    <img src="{{ featured_image }}" alt="{{ image_caption }}" class="lazyload">
  {% endif %}

  <div class="prose">
    {{ content | safe }}
  </div>
</div>

{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}


<div class="flex items-center flex-wrap justify-between border-t-2 pt-10 border-gray-100">
  {% if nextPost %}
  <div class="flex-initial flex-shrink-0">
    <a href="{{ nextPost.url }}" class="inline-block whitespace-no-wrap p-3 border border-transparent text-base leading-4 font-medium rounded-md text-champagne-900 hover:text-champagne-50 bg-champagne-100 hover:bg-champagne-600 focus:outline-none focus:border-champagne-800 focus:shadow-outline-champagne active:bg-champagne-800 transition ease-in-out duration-150 mr-4">Volgende bericht</a>
  </div>
  {% endif %}
  <div class="flex-auto py-3">
    <a href="/blog/page-1" class="text-sm text-gray-500 hover:text-lavender-800 transition ease-in-out duration-150 truncate">&larr; Terug naar blogarchief </a>
  </div>
</div>

