---
layout: layouts/default
---
{% set isPromo = false %}
{%- for postTag in tags -%}
  {%- if 'promo' in postTag -%}
    {% set isPromo = true %}
  {%- endif -%}
{%- endfor -%}


<div class="-mt-8 mb-8">
  {% if not isPromo %}<time class="font-bold text-xs text-meta mr-2" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>{% endif %}

  {%- import "macros/cards.njk" as card -%}
  {{ card.tags(
    tags = tags
  ) }}
</div>

{% set markdownClasses = "" %}
{% if image_position == "aside" %}
  {% set markdownClasses = "markdown--aside" %}
{% endif %}

<div class="markdown {{ markdownClasses }}">
  {% if featured_image %}
    <div class="featured_image">
      <img src="{{ featured_image }}" alt="{{ image_caption }}" class="lazyload">
    </div>
  {% endif %}

  <div class="prose">
    {{ content | safe }}
  </div>
</div>

{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}


<div class="flex items-center flex-wrap justify-between border-t-2 pt-10 border-primary">
  {% if nextPost %}
  <div class="flex-initial flex-shrink-0">
    <a href="{{ nextPost.url }}" class="inline-block whitespace-no-wrap p-3 text-base leading-4 font-medium rounded-md text-button hover:text-button-hover bg-button hover:bg-button-hover focus:outline-none transition ease-in-out duration-150 mr-4">Volgende bericht</a>
  </div>
  {% endif %}
  <div class="flex-auto py-3">
    <a href="{{ site.archive_url }}" class="text-sm text-meta hover:text-link transition ease-in-out duration-150 truncate">&larr; Naar blogarchief </a>
  </div>
</div>

