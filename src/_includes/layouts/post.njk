---
layout: layouts/default
---


<div class="-mt-8 mb-8">
  <time class="font-bold text-xs text-gray-600 text-opacity-50 mr-2" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>

  {%- import "macros/cards.njk" as card -%}
  {{ card.tags(
    tags = tags
  ) }}
</div>

<div class="markdown">
  {% if featured_image %}
    <img src="{{ featured_image }}" alt="{{ image_caption }}" class="lazyload">
  {% endif %}

  <div class="prose">
    {{ content | safe }}
  </div>
</div>

{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}

{% if previousPost %}
<div class="border-t-2 pt-10 border-gray-100">
  <a href="{{ previousPost.url }}" alt="{{ previousPost.data.title }}" class="inline-flex items-center p-3 border border-transparent text-base leading-4 font-medium rounded-md text-champagne-900 text-opacity-75 hover:text-champagne-50 bg-champagne-100 hover:bg-champagne-600 focus:outline-none focus:border-champagne-800 focus:shadow-outline-champagne active:bg-champagne-800 transition ease-in-out duration-150">Vorige bericht</a>
</div>
{% endif %}
