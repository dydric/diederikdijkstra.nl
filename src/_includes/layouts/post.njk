---
layout: layouts/default
---


<div class="-mt-8 mb-8">
  <time class="font-bold text-xs text-gray-600 text-opacity-50 mr-2" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>

  {%- import "macros/cards.njk" as card -%}
  {{ card.tags(
    tags = tags
  ) }}
</div>

<div class="markdown">
  {% if featured_image %}
    <img src="{{ featured_image }}" alt="{{ image_caption }}" class="lazyload">
  {% endif %}

  <div class="prose">
    {{ content | safe }}
  </div>
</div>

{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}


<div class="border-t-2 pt-10 border-gray-100">
  {% if nextPost %}
  <a href="{{ nextPost.url }}" class="inline-flex items-center p-3 border border-transparent text-base leading-4 font-medium rounded-md text-champagne-900 hover:text-champagne-50 bg-champagne-100 hover:bg-champagne-600 focus:outline-none focus:border-champagne-800 focus:shadow-outline-champagne active:bg-champagne-800 transition ease-in-out duration-150 mr-2">Volgende bericht</a>
  {% endif %}
  <a href="/blog" class=" text-sm text-gray-500 hover:text-lavender-800 transition ease-in-out duration-150">Blogarchief &rarr;</a>
</div>

